@page
@using DevextremeXPOCRUD.Models

<h2>Home</h2>

@(Html.DevExtreme().DataGrid<DevextremeXPOCRUD.Controllers.ProductsViewModel>()
    .DataSource(ds => ds.Mvc()
        .Controller("Products")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.NAME);

        columns.AddFor(m => m.PRICE);

        columns.AddFor(m => m.CategoryId);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)